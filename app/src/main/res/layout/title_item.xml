<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="3dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_weight="3"
        android:src="@mipmap/a3"/>
    <TextView
        android:id="@+id/titletext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="赶走肌肤雾霾，王东王东王东"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王东"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"/>
        <ImageView
            android:src="@drawable/ic_topic_detail_item_rec_topic_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/yanheart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345"/>
        <ImageView
            android:src="@drawable/ic_topic_detail_item_rec_topic_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/hearttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="54321"/>
    </LinearLayout>
</LinearLayout>